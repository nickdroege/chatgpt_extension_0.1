{
  "manifest_version": 3,
  "name": "Toro GPT",
  "version": "1.0",
  "description": "A Chrome extension that integrates ChatGPT to provide insights on web content.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}

